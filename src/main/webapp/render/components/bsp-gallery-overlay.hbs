
{{#if options.overlay}}
    <div class="bsp-list-promo-overlay">
        <div class="bsp-list-promo-overlay{{#if options.position}}-{{options.position}}{{/if}}" style="{{#if options.backgroundColor}}background-color:{{options.backgroundColor}};{{/if}} {{#if options.textColor}}color:{{options.textColor}};{{/if}}">

            {{#with tag}}
                <div class="bsp-list-promo-tag">{{render this}}</div>
            {{/with}}

            {{#with image}}
                <div class="bsp-list-promo-image">{{render this}}</div>
            {{/with}}

            {{#with title}}
                <div class="bsp-list-promo-title">{{render this}}</div>
            {{/with}}

            {{#if subtitle}}
                <div class="bsp-list-promo-subtitle">{{{subtitle}}}</div>
            {{/if}}

            {{#if description}}
                <div class="bsp-list-promo-desc"{{#if options.truncate}}data-bsp-truncate data-bsp-truncate-options='{"maxLines" : {{options.maxLines}} }'{{/if}} >{{{description}}}</div>
            {{/if}}
        </div>
    </div>
{{/if}}