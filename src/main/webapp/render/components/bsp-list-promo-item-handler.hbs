<div class="bsp-list-promo-section{{#if name}}-{{name}}{{/if}} ">
    {{#with image}}
        <div class="bsp-list-promo-image">
            {{render this}}

            {{#with overlayLinked}}
                {{render this}}
            {{/with}}

        </div>
    {{/with}}

    {{#if tags}}
        <ul class="bsp-list-promo-tags">
            {{#each tags}}
                <li>{{render this}}</li>
            {{/each}}
        </ul>
    {{/if}}

    {{#with tag}}
        <div class="bsp-list-promo-tag">{{render this}}</div>
    {{/with}}

    {{#with title}}
        <div class="bsp-list-promo-title">{{render this}}</div>
    {{/with}}

    {{#with overlay}}
        <div class="bsp-list-promo-overlay">{{render this}}</div>
    {{/with}}

    {{#if subtitle}}
        <div class="bsp-list-promo-subtitle">{{{subtitle}}}</div>
    {{/if}}

    {{#if description}}
        <div class="bsp-list-promo-desc"{{#if options.truncate}}data-bsp-truncate data-bsp-truncate-options='{"maxLines" : {{options.maxLines}} }'{{/if}} >{{{description}}}</div>
    {{/if}}

    {{#with link}}
        <div class="bsp-list-promo-link">{{render this}}</div>
    {{/with}}

</div>
